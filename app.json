{
  "expo": {
    "name": "Bcgh Connect",
    "slug": "bcgh-connect",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/app-icon.png",
    "scheme": "bcghconnect",
    "userInterfaceStyle": "automatic",
    "description": "Bcgh Connect helps staff manage attendance, schedules, and communication within Better Choice Group Homes.",
    "splash": {
      "image": "./assets/better-icon-removebg-preview.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "url": "https://u.expo.dev/b0d2c395-7ade-466d-93d5-c3955e523373",
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.bcghi.app",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "UIBackgroundModes": [
          "location",
          "fetch",
          "remote-notification"
        ],
        "NSLocationWhenInUseUsageDescription": "This app uses your location while the app is open to track attendance and geofencing.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app requires background location access to track check-in/check-out even when the app is closed.",
        "UIBackgroundModesDescription": "Background location is required for attendance and geofencing.",
        "NSCalendarsUsageDescription": "This app may use your calendar for scheduling and reminders.",
        "NSRemindersUsageDescription": "This app may send reminders for check-in and schedules.",
        "ITSAppUsesNonExemptEncryption": false,
        "NSFaceIDUsageDescription": "Allow Bcgh Connect to use Face ID for secure authentication."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon-foreground.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.bcghi.app",
      "versionCode": 2,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "WAKE_LOCK",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "INTERNET",
        "POST_NOTIFICATIONS",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_LOCATION",
        "USE_BIOMETRIC",
        "USE_FINGERPRINT"
      ],
      "softwareKeyboardLayoutMode": "pan"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-local-authentication",
        {
          "isUsingFingerprint": true,
          "isUsingFaceId": true
        }
      ],
      [
        "expo-location",
        {
          "isAndroidBackgroundLocationEnabled": true,
          "isAndroidForegroundServiceEnabled": true
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/better-icon.png",
          "color": "#FF5733"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "b0d2c395-7ade-466d-93d5-c3955e523373"
      }
    }
  }
}
